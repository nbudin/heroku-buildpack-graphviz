#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>
set -e

PACKAGE="http://nbudin.s3.amazonaws.com/graphviz-2.28.0.tgz"
BUILDPACK_DIR=`cd $(dirname $0); cd ..; pwd`
BUILD_DIR=$1
CACHE_DIR=$2
GRAPHVIZ_DIR=$CACHE_DIR/.tools/graphviz

mkdir -p $GRAPHVIZ_DIR

echo "-----> Fetching and installing graphviz"
cd $WGET_BUILD
curl $PACKAGE -s -o - | tar xzf - -C $GRAPHVIZ_DIR

exit 0